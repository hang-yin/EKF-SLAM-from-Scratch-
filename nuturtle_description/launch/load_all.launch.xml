<launch>
  <include file="$(find-pkg-share nuturtle_description)/launch/load_one.launch.py">
    <arg name="color" value="red"/>
    <arg name="use_rviz" value="false"/>
  </include>

  <include file="$(find-pkg-share nuturtle_description)/launch/load_one.launch.py">
    <arg name="color" value="green"/>
    <arg name="use_rviz" value="false"/>
  </include>

  <include file="$(find-pkg-share nuturtle_description)/launch/load_one.launch.py">
    <arg name="color" value="blue"/>
    <arg name="use_rviz" value="false"/>
  </include>

  <include file="$(find-pkg-share nuturtle_description)/launch/load_one.launch.py">
    <arg name="color" value="purple"/>
    <arg name="use_rviz" value="false"/>
  </include>

  <node name="purple_tf_publisher"
        pkg="tf2_ros" 
        exec="static_transform_publisher"
        args="--frame-id nusim/world --child-frame-id /purple/base_footprint --x 0 --y -1 --z 0"/>
  <node name="red_tf_publisher"
        pkg="tf2_ros" 
        exec="static_transform_publisher"
        args="--frame-id nusim/world --child-frame-id /red/base_footprint --x 0.25 --y 0 --z 0"/>
  <node name="green_tf_publisher"
        pkg="tf2_ros" 
        exec="static_transform_publisher"
        args="--frame-id nusim/world --child-frame-id /green/base_footprint --x 0 --y 0.5 --z 0"/>
  <node name="blue_tf_publisher"
        pkg="tf2_ros" 
        exec="static_transform_publisher"
        args="--frame-id nusim/world --child-frame-id /blue/base_footprint --x -0.75 --y 0 --z 0"/>

  <node name="rviz" pkg="rviz2" exec="rviz2" args="-d $(find-pkg-share nuturtle_description)/config/basic_all.rviz"/>
</launch>
